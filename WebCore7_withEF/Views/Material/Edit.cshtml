@model WebCore7_withEF.Controllers.MaterialController.MaterialRegistrationViewModel

@{
    ViewData["Title"] = "Create";
}

<h4>Edit Material</h4>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PkMaterial" />
            <div class="form-group">
                <label asp-for="FkLocation" class="control-label"></label>
                <select asp-for="FkLocation" class="form-control" asp-items="@ViewBag.FkLocation">
                    <option value="">Select</option>
                </select>
                <span asp-validation-for="FkLocation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Update" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>

